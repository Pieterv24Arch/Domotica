<?xml version="1.0" encoding="UTF-8" ?>

<!-- This file is used to define the theme of the app -->

<resources>
	<style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/my_primary</item>
		<item name="colorPrimaryDark">@color/my_statusBarColor</item>
		<item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
	</style>

	<style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">#FFFFFF</item>
		<item name="spinBars">true</item>
	</style>

	<style name="DarkText">
		<item name="android:textColor">#FFFFFF</item>
	</style>
</resources>
